{
    "name": "Dark Mode Protocol Workspace",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "customizations": {
        "vscode": {
            "extensions": [
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint",
                "ms-python.python",
                "rust-lang.rust-analyzer",
                "bradlc.vscode-tailwindcss"
            ]
        }
    },
    "postCreateCommand": "npm install && cd relayer && python -m venv venv && . venv/bin/activate && pip install -r requirements.txt",
    "forwardPorts": [
        3000,
        8000
    ],
    "portsAttributes": {
        "3000": {
            "label": "Next.js Frontend",
            "onAutoForward": "notify"
        },
        "8000": {
            "label": "Relayer Bot",
            "onAutoForward": "notify"
        }
    }
}